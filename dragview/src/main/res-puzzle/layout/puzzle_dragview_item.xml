<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:layout_height="128dp"
  tools:layout_width="128dp">

  <ImageView
    android:id="@+id/drag_view_display_iv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    tools:background="@android:color/holo_red_dark"
    tools:layout_height="128dp"
    tools:layout_width="128dp"
    tools:scaleType="centerInside"
    tools:src="@drawable/icon_4" />

  <ImageButton
    android:id="@+id/drag_view_cancel_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_margin="@dimen/material_8dp"
    android:adjustViewBounds="true"
    android:background="@android:color/transparent"
    android:src="@drawable/icon_shanchu" />

</merge>