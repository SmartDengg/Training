<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/drag_view_display_iv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    tools:scaleType="centerInside"
    tools:src="@drawable/number_0" />

  <ImageButton
    android:id="@+id/drag_view_cancel_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_margin="@dimen/material_8dp"
    android:background="@android:color/transparent"
    android:src="@drawable/prompt_icon_close"
    android:tint="@android:color/holo_red_dark" />

</merge>