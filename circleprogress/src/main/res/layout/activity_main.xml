<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:timer="http://schemas.android.com/apk/res-auto"
  android:id="@+id/activity_main"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.smartdengg.circleprogress.CircleProgress
    android:id="@+id/circleprogress"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerInParent="true"
    android:layout_margin="8dp"
    timer:preFillPoint="0"
    timer:radius="20dp"
    timer:startingPoint="270"
    timer:strokeWidth="2dp" />

  <Button
    android:id="@+id/startTimer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/circleprogress"
    android:layout_centerInParent="true"
    android:layout_margin="8dp"
    android:text="Start" />

  <Button
    android:id="@+id/resetTimer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/startTimer"
    android:layout_centerInParent="true"
    android:layout_margin="8dp"
    android:text="Reset" />

  <Button
    android:id="@+id/restartTimer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/resetTimer"
    android:layout_centerInParent="true"
    android:layout_margin="8dp"
    android:text="Restart" />

</RelativeLayout>